@section Styles
{
	<link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />

	<style>
	</style>
}

@* 定義dataTables *@
<table class="table table-striped table-hover">
    <thead class="table-dark">
		<tr>
			<td>ProductID</td>
			<td>ProductName</td>
			<td>SupplierID</td>
			<td>CategoryID</td>
			<td>QuantityPerUnit</td>
			<td>UnitPrice</td>
			<td>UnitsInStock</td>
			<td>UnitsOnOrder</td>
			<td>ReorderLevel</td>
			<td>Discontinued</td>
		</tr>
	</thead>
</table>




@section Scripts
{
	<script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
	<script src="//cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script>
	<script>
		$(document).ready(function(){      //網頁載入成功後 做function
			//alert("ready")  先驗證是否載入成功
			$("table").dataTable({   //物件參數{}
				ajax:{               //畫面不閃爍的重點技術
					url:"/Products/IndexJson",
					type:"GET",
					dataSrc:function(data){
						return data;
					}
				},
				columns:[
					{"data":"productId","width":"10%"},
					{"data":"productName","width":"10%"},
					{"data":"supplierId","width":"10%"},
					{"data":"categoryId","width":"10%"},
					{"data":"quantityPerUnit","width":"10%"},
					{"data":"unitPrice","width":"10%"},
					{"data":"unitsInStock","width":"10%"},
					{"data":"unitsOnOrder","width":"10%"},
					{"data":"reorderLevel","width":"10%"},
					{"data":"discontinued","width":"10%"}
				],
				fixedHeader:{ header:true
				},
				language: {
				url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/zh-HANT.json',
				},
			});
		});
	</script>
}